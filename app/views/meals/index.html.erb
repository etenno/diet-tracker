<div>
  <div>
    <h1>Meals index</h1>
  </div>
</div>

<% num = 0 %>

<div>
  <div>
    <% num += 1 %>
    <% @meals.each do |meal| %>
      <ul>
        <%= link_to meal do %>
          <li>
            <%=meal.name%>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>

<p><%= link_to "add a meal", new_meal_path %></p>
</div>
