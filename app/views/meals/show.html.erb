<div>
  <h1><%= @meal.name %></h1>
</div>

<div>

  <div>
    <h3>FOOD   Description   Emissions</h3>
    <% @meal.ingredients.each do |ingredient| %>
      <div><%= Food.find(ingredient.food_id).name %>  <%= ingredient.description %>   <%= Food.find(ingredient.food_id).emission_rate %> </div>

    <% end %>
  </div>
</div>

<%= link_to "add an ingredient", new_meal_ingredient_path(@meal) %>
